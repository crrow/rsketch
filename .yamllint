---
extends: default

rules:
  ignore: |
      *.template.yaml
      generated/
      .github/
      target/
  line-length:
    max: 120
    level: warning
  truthy:
    allowed-values: ['true', 'false']
  comments:
    min-spaces-from-content: 1
  document-start: disable
  indentation:
    spaces: 2
    indent-sequences: whatever
  brackets:
    max-spaces-inside: 1
